

@using University.Models;

<div class="container">
  <div class="row">
    <h2 class="col-sm-8">Students</h2>
    @Html.ActionLink("Add New Student", "Create", "Students", null, new { @class = "btn btn-primary col-sm-3" })
  </div>
  <div class="container content pt-5">
    @if (@Model.Count == 0)
    {
      <p>There are no Students yet registered.</p>
    }
    else
    {
      <ul>
        @foreach (Student student in Model)
        {
          <li>
            @Html.ActionLink($"{student.Name}", "Details", "Students", new { id = student.StudentId }, new { @class = "btn btn-primary" })
          </li>
        }
      </ul>
    }
  </div>
</div>
