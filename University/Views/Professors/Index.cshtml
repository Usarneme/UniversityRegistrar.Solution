

@using University.Models;

<div class="container">
  <div class="row">
    <h2 class="col-sm-8">Professors</h2>
    @Html.ActionLink("Add New Professor", "Create", "Professors", null, new { @class = "btn btn-primary col-sm-3" })
  </div>
  <div class="container content pt-5">
    @if (@Model.Count == 0)
    {
      <p>There are no Professors yet registered.</p>
    }
    else
    {
      <ul>
        @foreach (Professor professor in Model)
        {
          <li>
            @Html.ActionLink($"{professor.Name}", "Details", "Professors", new { id = professor.ProfessorId }, new { @class = "btn btn-primary" })
          </li>
        }
      </ul>
    }
  </div>
</div>
